{% extends 'base.html.twig' %}

{% block title %}Lesson{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>{{ lesson.title }}</h1>
        <p class="fs-4">Курс:
            <a href="{{ path('app_course_show', {'id': lesson.course.id}) }}">{{ lesson.course.title }}</a>
        </p>
        <div class="row row-cols-auto">
            <div class="col">
                <a class="btn btn-secondary" href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Редактировать</a>
            </div>
            <div class="col">
                {{ include('lesson/_delete_form.html.twig') }}
            </div>
        </div>
        <p class="fs-5 mt-3 border border-secondary">
            {{ lesson.content }}
        </p>
    </div>
{% endblock %}