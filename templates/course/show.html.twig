{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>{{ course.title }}</h1>
        <p class="fs-6">{{ course.description }}</p>

        <h2 class="mt-4">Список уроков:</h2>
        <ol>
            {% for lesson in lessons %}
                <li><a class="btn btn-primary my-3" href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.title }}</a></li>
            {% else %}
                <h4>Нет уроков</h4>
            {% endfor %}
        </ol>
        <div class="container-fluid">
            <div class="row row-cols-auto">
                <div class="col">
                    <a class="btn btn-outline-dark" href="{{ path('app_course_index') }}">Вернуться к списку</a>
                </div>
                <div class="col">
                    <a class="course-edit btn btn-outline-dark" href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать</a>
                </div>
                <div class="col">
                    {{ include('course/_delete_form.html.twig') }}
                </div>
                <div class="col">
                    <a class="btn btn-outline-dark" href="{{ path('app_lesson_new', {'course': course.id}) }}">Добавить
                        урок</a>
                </div>
            </div>
        </div>

    </div>
{% endblock %}